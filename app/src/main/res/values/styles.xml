<resources>

    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="colorPrimary">@color/primary</item>
        <item name="colorPrimaryDark">@color/primary_dark</item>
        <item name="colorAccent">@color/accent</item>
        <item name="android:textColorPrimary">@color/primary_text</item>
        <item name="android:textColorSecondary">@color/secondary_text</item>
        <item name="cardBackgroundColor">@color/white</item>
        <item name="colorDialer">@android:color/holo_blue_dark</item>
        <item name="colorNavigation">@android:color/holo_green_light</item>
        <item name="colorVoice">@android:color/holo_red_light</item>
    </style>

    <style name="CardViewStyle" parent="CardView">
        <item name="android:layout_margin">@dimen/card_view_margin</item>
        <item name="cardBackgroundColor">?cardBackgroundColor</item>
    </style>

</resources>
