<resources>

    <style name="AppTheme" parent="@android:style/Theme.Material.Light.NoActionBar">
        <item name="android:fitsSystemWindows">false</item>
        <item name="android:windowTranslucentStatus">false</item>
        <item name="android:windowTranslucentNavigation">false</item>
        <item name="android:windowDrawsSystemBarBackgrounds">true</item>
        <item name="android:windowContentTransitions">true</item>
        <item name="android:colorAccent">@color/accent</item>
        <item name="android:windowAllowReturnTransitionOverlap">true</item>
        <item name="android:windowAllowEnterTransitionOverlap">true</item>
        <item name="android:backgroundTint">@color/background_light</item>
        <item name="colorDialer">@android:color/holo_blue_dark</item>
        <item name="colorNavigation">@android:color/holo_green_light</item>
        <item name="colorVoice">@android:color/holo_red_light</item>
        <item name="background">@color/background_light</item>
        <item name="cardBackgroundColor">@color/white</item>
        <item name="cardElevation">2.0dip</item>
        <item name="android:textColorPrimary">?android:textColorSecondary</item>
    </style>

    <style name="Card" parent="@style/CardView">
        <item name="android:background">?cardBackgroundColor</item>
        <item name="android:layout_height">96.0dip</item>
        <item name="android:layout_marginTop">0dp</item>
        <item name="android:layout_marginBottom">0dp</item>
        <item name="android:layout_marginStart">0dp</item>
        <item name="android:layout_marginEnd">0dp</item>
        <item name="android:minHeight">96.0dip</item>
        <item name="cardBackgroundColor">?cardBackgroundColor</item>
        <item name="cardElevation">?cardElevation</item>
        <item name="cardUseCompatPadding">true</item>
    </style>

    <style name="TextAppearance.Dialpad" parent="@android:style/TextAppearance.Material">
        <item name="android:layout_columnWeight">1</item>
        <item name="android:layout_gravity">fill</item>
        <item name="android:background">?android:selectableItemBackgroundBorderless</item>
        <item name="android:gravity">center</item>
        <item name="android:textSize">52sp</item>
    </style>

    <style name="ShowcaseView">
        <item name="sv_showcaseColor">?android:colorAccent</item>
    </style>

    <style name="TextAppearance.ShowcaseView.Title" parent="TextAppearance.ShowcaseView.Title">
        <item name="android:textColor">@android:color/white</item>
        <item name="android:textSize">32sp</item>
    </style>
</resources>
