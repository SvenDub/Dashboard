<?xml version="1.0" encoding="utf-8"?>
<resources>
    <declare-styleable name="SpeedView">
        <attr name="showLabel" format="boolean"/>
        <attr name="unit" format="enum">
            <enum name="ms" value="0"/>
            <enum name="kmh" value="1"/>
            <enum name="mph" value="2"/>
        </attr>
    </declare-styleable>

    <declare-styleable name="DialView">
        <attr name="showValue" format="boolean"/>
        <attr name="needleColor" format="color"/>
        <attr name="ringColor" format="color"/>
        <attr name="android:textColor"/>
        <attr name="max" format="float"/>
        <attr name="progress" format="float"/>
        <!-- Shows a label every set amount of steps -->
        <attr name="labels" format="float"/>
        <!-- Show these labels with a different color -->
        <attr name="labelsHighlighted" format="reference"/>
        <attr name="decimals" format="integer"/>
        <attr name="bottomIcon" format="reference" />
    </declare-styleable>

    <attr name="colorDialer" format="color"/>
    <attr name="colorNavigation" format="color"/>
    <attr name="colorVoice" format="color"/>
</resources>