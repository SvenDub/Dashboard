<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/bg"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent">

    <GridLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10.0dip"
        android:layout_marginRight="10.0dip"
        android:columnCount="2"
        android:paddingBottom="@dimen/nav_bar_height"
        android:paddingTop="@dimen/status_bar_height">

        <FrameLayout
            android:layout_columnSpan="2"
            android:layout_gravity="fill">

            <include layout="@layout/container_date" />
        </FrameLayout>

        <FrameLayout
            android:layout_columnSpan="2"
            android:layout_gravity="fill">

            <include layout="@layout/container_speed" />
        </FrameLayout>

        <FrameLayout
            android:layout_columnSpan="2"
            android:layout_gravity="fill">

            <include layout="@layout/container_media" />
        </FrameLayout>

        <FrameLayout
            android:layout_columnSpan="2"
            android:layout_gravity="fill">

            <include layout="@layout/container_status" />
        </FrameLayout>

        <FrameLayout
            android:layout_columnWeight="1"
            android:layout_gravity="fill">

            <android.support.v7.widget.CardView
                android:id="@+id/btn_dialer"
                style="@style/Card"
                android:layout_width="fill_parent"
                android:clickable="true"
                android:focusable="true"
                android:foreground="?android:selectableItemBackground">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="fill_parent"
                    android:layout_gravity="center_horizontal"
                    android:adjustViewBounds="true"
                    android:src="@drawable/ic_communication_phone"
                    android:tint="?colorDialer" />
            </android.support.v7.widget.CardView>
        </FrameLayout>

        <FrameLayout
            android:layout_columnWeight="1"
            android:layout_gravity="fill">

            <android.support.v7.widget.CardView
                android:id="@+id/btn_navigation"
                style="@style/Card"
                android:layout_width="fill_parent"
                android:clickable="true"
                android:focusable="true"
                android:foreground="?android:selectableItemBackground">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="fill_parent"
                    android:layout_gravity="center_horizontal"
                    android:adjustViewBounds="true"
                    android:src="@drawable/ic_maps_navigation"
                    android:tint="?colorNavigation" />
            </android.support.v7.widget.CardView>
        </FrameLayout>

        <FrameLayout
            android:layout_columnWeight="1"
            android:layout_gravity="fill">

            <android.support.v7.widget.CardView
                android:id="@+id/btn_voice"
                style="@style/Card"
                android:layout_width="fill_parent"
                android:clickable="true"
                android:focusable="true"
                android:foreground="?android:selectableItemBackground">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="fill_parent"
                    android:layout_gravity="center_horizontal"
                    android:adjustViewBounds="true"
                    android:src="@drawable/ic_hardware_keyboard_voice"
                    android:tint="?colorVoice" />
            </android.support.v7.widget.CardView>
        </FrameLayout>

        <FrameLayout
            android:layout_columnWeight="1"
            android:layout_gravity="fill">

            <android.support.v7.widget.CardView
                android:id="@+id/btn_speak_notifications"
                style="@style/Card"
                android:layout_width="fill_parent"
                android:clickable="true"
                android:focusable="true"
                android:foreground="?android:selectableItemBackground">

                <ImageView
                    android:id="@+id/btn_speak_notifications_icon"
                    android:layout_width="wrap_content"
                    android:layout_height="fill_parent"
                    android:layout_gravity="center_horizontal"
                    android:adjustViewBounds="true"
                    android:backgroundTintMode="src_in"
                    android:src="@drawable/ic_av_hearing"
                    android:tint="?android:textColorSecondary"
                    android:tintMode="src_in" />
            </android.support.v7.widget.CardView>
        </FrameLayout>

        <FrameLayout
            android:layout_columnWeight="1"
            android:layout_gravity="fill">

            <android.support.v7.widget.CardView
                android:id="@+id/btn_settings"
                style="@style/Card"
                android:layout_width="fill_parent"
                android:clickable="true"
                android:focusable="true"
                android:foreground="?android:selectableItemBackground">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="fill_parent"
                    android:layout_gravity="center_horizontal"
                    android:adjustViewBounds="true"
                    android:src="@drawable/ic_action_settings"
                    android:tint="?android:textColorSecondary" />
            </android.support.v7.widget.CardView>
        </FrameLayout>

        <FrameLayout
            android:layout_columnWeight="1"
            android:layout_gravity="fill">

            <android.support.v7.widget.CardView
                android:id="@+id/btn_exit"
                style="@style/Card"
                android:layout_width="fill_parent"
                android:clickable="true"
                android:focusable="true"
                android:foreground="?android:selectableItemBackground">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="fill_parent"
                    android:layout_gravity="center_horizontal"
                    android:adjustViewBounds="true"
                    android:src="@drawable/ic_action_exit_to_app"
                    android:tint="?android:textColorSecondary" />
            </android.support.v7.widget.CardView>
        </FrameLayout>
    </GridLayout>
</ScrollView>