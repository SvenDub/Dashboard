<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    android:id="@+id/target_container"
    style="@style/CardViewStyle"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginEnd="8dp"
    android:layout_marginStart="8dp"
    android:minHeight="0dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:animateLayoutChanges="true"
        android:orientation="horizontal">

        <AutoCompleteTextView
            android:id="@+id/target"
            android:layout_width="0dp"
            android:layout_height="40dp"
            android:layout_weight="1"
            android:background="@android:color/transparent"
            android:completionThreshold="1"
            android:dropDownAnchor="@+id/target_container"
            android:dropDownSelector="@drawable/selectable_background_transparent"
            android:dropDownVerticalOffset="0dp"
            android:hint="@string/navigation_input"
            android:imeOptions="actionGo"
            android:padding="8dp"
            android:popupBackground="@android:color/transparent"
            android:singleLine="true"
            android:textColor="?android:textColorPrimary"/>

        <ImageView
            android:id="@+id/target_voice"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_gravity="end"
            android:background="@drawable/round_ripple"
            android:backgroundTint="?cardBackgroundColor"
            android:clickable="true"
            android:focusable="true"
            android:onClick="onClick"
            android:padding="4dp"
            android:src="@drawable/ic_av_mic"
            android:tint="?android:textColorSecondary"/>

        <ImageView
            android:id="@+id/target_clear"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_gravity="end"
            android:background="@drawable/round_ripple"
            android:backgroundTint="?cardBackgroundColor"
            android:clickable="true"
            android:focusable="true"
            android:onClick="onClick"
            android:padding="4dp"
            android:src="@drawable/ic_content_clear"
            android:tint="?android:textColorSecondary"
            android:visibility="gone"/>

    </LinearLayout>
</android.support.v7.widget.CardView>