<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
             android:layout_width="match_parent"
             android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal">

        <RelativeLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1">

            <FrameLayout
                android:id="@+id/map"
                android:layout_width="match_parent"
                android:layout_height="match_parent"/>

            <ImageView
                android:layout_width="8dp"
                android:layout_height="match_parent"
                android:layout_alignParentEnd="true"
                android:src="@drawable/scrim_transparent_background_horizontal"/>

            <FrameLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_alignParentEnd="true"
                android:layout_marginBottom="@dimen/nav_bar_height">

                <FrameLayout
                    android:id="@+id/btn_navigation"
                    android:layout_width="56dp"
                    android:layout_height="56dp"
                    android:layout_marginBottom="16dp"
                    android:layout_marginEnd="16dp"
                    android:background="@drawable/round_ripple"
                    android:backgroundTint="?colorNavigation"
                    android:clickable="true"
                    android:elevation="5dp"
                    android:focusable="true"
                    android:onClick="onClick">

                    <ImageView
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:layout_gravity="center"
                        android:src="@drawable/ic_maps_navigation"
                        android:transitionName="@string/transition_button_navigation"/>
                </FrameLayout>
            </FrameLayout>
        </RelativeLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_marginTop="48dp"
            android:layout_weight="2"
            android:orientation="vertical"
            android:paddingTop="@dimen/status_bar_height">

            <GridLayout
                android:id="@+id/buttons"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="8dp"
                android:layout_marginRight="8dp"
                android:columnCount="2">

                <FrameLayout
                    android:layout_columnWeight="1"
                    android:layout_gravity="fill">

                    <android.support.v7.widget.CardView
                        android:id="@+id/btn_home"
                        style="@style/Card"
                        android:layout_width="fill_parent"
                        android:clickable="true"
                        android:focusable="true"
                        android:foreground="?android:selectableItemBackground"
                        android:onClick="onClick">

                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="fill_parent"
                            android:layout_gravity="center_horizontal"
                            android:adjustViewBounds="true"
                            android:src="@drawable/ic_action_home"
                            android:tint="?android:textColorSecondary"/>
                    </android.support.v7.widget.CardView>
                </FrameLayout>

                <FrameLayout
                    android:layout_columnWeight="1"
                    android:layout_gravity="fill">

                    <android.support.v7.widget.CardView
                        android:id="@+id/btn_work"
                        style="@style/Card"
                        android:layout_width="fill_parent"
                        android:clickable="true"
                        android:focusable="true"
                        android:foreground="?android:selectableItemBackground"
                        android:onClick="onClick">

                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="fill_parent"
                            android:layout_gravity="center_horizontal"
                            android:adjustViewBounds="true"
                            android:src="@drawable/ic_action_work"
                            android:tint="?android:textColorSecondary"/>
                    </android.support.v7.widget.CardView>
                </FrameLayout>

            </GridLayout>

            <FrameLayout
                android:id="@+id/fragment_favorites"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1">

            </FrameLayout>

        </LinearLayout>

    </LinearLayout>

    <android.support.v7.widget.CardView
        style="@style/Card"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginEnd="8dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="@dimen/status_bar_height"
        android:minHeight="0dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <EditText
                android:id="@+id/target"
                android:layout_width="0dp"
                android:layout_height="40dp"
                android:layout_weight="1"
                android:background="@android:color/transparent"
                android:hint="@string/navigation_input"
                android:imeOptions="actionGo"
                android:padding="8dp"
                android:singleLine="true"
                android:textColor="?android:textColorPrimary"/>

            <ImageView
                android:id="@+id/target_voice"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_gravity="end"
                android:background="@drawable/round_ripple"
                android:backgroundTint="?cardBackgroundColor"
                android:clickable="true"
                android:focusable="true"
                android:onClick="onClick"
                android:padding="4dp"
                android:src="@drawable/ic_av_mic"
                android:tint="?android:textColorSecondary"/>

        </LinearLayout>
    </android.support.v7.widget.CardView>

    <ImageView
        android:id="@+id/status_bar_background"
        android:layout_width="match_parent"
        android:layout_height="@dimen/status_bar_height"
        android:src="@drawable/status_bar_background"/>

    <ImageView
        android:id="@+id/navigation_bar_background"
        android:layout_width="match_parent"
        android:layout_height="@dimen/nav_bar_height"
        android:layout_gravity="bottom"
        android:src="@drawable/navigation_bar_background"/>

</FrameLayout>